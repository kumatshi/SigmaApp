<Window x:Class="SigmaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400" WindowStartupLocation="CenterScreen"
        Background="#561C24">

    <Grid>
        <Label Content="Имя пользователя:" HorizontalAlignment="Left" Margin="20,40,0,0"
               Foreground="#E8DBC4"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" Margin="150,40,0,189" Width="183"
                 Background="#E8DBC4" Foreground="#561C24"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="23,111,0,-11"
               Foreground="#E8DBC4"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="150,111,0,122" Width="183"
                     Background="#E8DBC4" Foreground="#561C24"/>

        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,192,0,46" Width="99"
                Background="#E8DBC4" Foreground="#561C24" Click="OnLoginButtonClick"/>
    </Grid>
</Window>
